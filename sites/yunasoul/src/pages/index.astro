---
// index.astro — YunaSoul | Enchanted Apothecary Link Card
//
// Each link is a glowing "potion orb" positioned over the corresponding
// shelf item in the card illustration. Adjust --x / --y percentages
// once the final card_background.png artwork is in place.

import BaseLayout from '../layouts/BaseLayout.astro';

const links = [
  {
    href: 'https://www.youtube.com/@YunaSoul_',
    label: 'YouTube',
    color: '#ff4444',
    glow: 'rgba(255, 68, 68, 0.45)',
    x: '27%',
    y: '17%',
    w: '11%',
    h: '15%',
  },
  {
    href: 'https://www.tiktok.com/@yunasoul',
    label: 'TikTok',
    color: '#00f2ea',
    glow: 'rgba(0, 242, 234, 0.4)',
    x: '17%',
    y: '40%',
    w: '13%',
    h: '19%',
  },
  {
    href: 'https://www.instagram.com/yunasoul_',
    label: 'Instagram',
    color: '#e1306c',
    glow: 'rgba(225, 48, 108, 0.45)',
    x: '40%',
    y: '40%',
    w: '10%',
    h: '19%',
  },
  {
    href: 'https://www.twitch.tv/yunasoul',
    label: 'Twitch',
    color: '#9146ff',
    glow: 'rgba(145, 70, 255, 0.45)',
    x: '20%',
    y: '65%',
    w: '15%',
    h: '17%',
  },
  {
    href: 'https://discord.gg/GaXJS2XRQS',
    label: 'Discord',
    color: '#5865f2',
    glow: 'rgba(88, 101, 242, 0.45)',
    x: '40%',
    y: '65%',
    w: '15%',
    h: '18%',
  },
];
---

<BaseLayout title="YunaSoul — Links" description="YunaSoul's enchanted link hub">
  <main class="page">

    <!-- Fullscreen blurred background -->
    <div class="bg-scene" aria-hidden="true">
      <img src="./background.png" alt="" class="bg-scene__image" />
      <div class="bg-scene__veil"></div>
    </div>

    <!-- Ambient floating particles -->
    <div class="particles" aria-hidden="true"></div>

    <!-- Enchanted name plate -->
    <h1 class="site-name">YunaSoul</h1>

    <!-- Illustration card with interactive potion-orb links -->
    <div class="card-wrapper">
      <div class="card">
        <img
          src="./card_background.png"
          alt="YunaSoul's enchanted apothecary"
          class="card__image"
          width="960"
          height="960"
        />

        <!-- Inner vignette for depth -->
        <div class="card__vignette" aria-hidden="true"></div>

        <!-- Link hotspots — each orb sits over a shelf item -->
        <div class="hotspots">
          {links.map((link) => (
            <a
              href={link.href}
              class="hotspot"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.label}
              style={`--x: ${link.x}; --y: ${link.y}; --w: ${link.w}; --h: ${link.h}; --orb-color: ${link.color}; --orb-glow: ${link.glow};`}
            >
              <span class="hotspot__label">{link.label}</span>
            </a>
          ))}
        </div>
      </div>
    </div>

  </main>
</BaseLayout>
