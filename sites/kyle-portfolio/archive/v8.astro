---
import BaseLayout from '../layouts/BaseLayout.astro';

const commands = [
  { cmd: "whoami", output: "Kyle, Developer, Open Source Enthusiast" },
  { cmd: "cat ./now.txt", output: [
    "- Building distributed systems in Rust",
    "- Reading 'Dune'",
    "- Waking up at 5AM",
    "- Learning synthesizer"
  ]},
  { cmd: "ls ./uses/", output: ["vscode", "nixos", "split-keyboard", "obsidian"] },
  { cmd: "ls -la ./ideas/", output: [
    "drwx------ 2 kyle kyle 4096 Feb 14 10:00 .",
    "drwx------ 4 kyle kyle 4096 Feb 14 09:00 ..",
    "-rw-r--r-- 1 kyle kyle 1024 Feb 14 10:01 introvert-social-network.md",
    "-rw-r--r-- 1 kyle kyle 2048 Feb 14 11:30 browser-ssg.js",
    "-rw-r--r-- 1 kyle kyle 512  Feb 14 12:45 procedural-city.rs"
  ]},
  { cmd: "cat ./links.json", output: `{
  "github": "https://github.com/KyleDerZweite",
  "blog": "https://kylehub.dev"
}` }
];
---

<BaseLayout title="Kyle - V8 Terminal" accent="#33ff00">
  <div class="terminal-container">
    <div class="terminal-window">
      <div class="terminal-header">
        <div class="buttons">
          <span class="btn red"></span>
          <span class="btn yellow"></span>
          <span class="btn green"></span>
        </div>
        <div class="title">kyle@linux:~</div>
      </div>
      <div class="terminal-body">
        <div class="output">
          <pre class="ascii-art">
  _  __      _      
 | |/ /_   _| | ___ 
 | ' /| | | | |/ _ \
 | . \| |_| | |  __/
 |_|\_\\__, |_|\___|
       |___/        
          </pre>
          <p>Welcome to KyleOS v1.0.0</p>
          <p>Type 'help' for available commands.</p>
          <br>
        </div>

        {commands.map((item, index) => (
          <div class="command-block">
            <div class="prompt">
              <span class="user">kyle@linux:~$</span>
              <span class="cmd type-effect" style={`animation-delay: ${index * 1}s`}>{item.cmd}</span>
            </div>
            <div class="response animate-reveal" style={`animation-delay: ${index * 1 + 0.5}s`}>
              {Array.isArray(item.output) ? (
                item.output.map(line => <div class="line">{line}</div>)
              ) : (
                <pre>{item.output}</pre>
              )}
            </div>
            <br>
          </div>
        ))}

        <div class="input-line">
          <span class="user">kyle@linux:~$</span>
          <span class="cursor">_</span>
        </div>
        
        <div class="footer-links">
            <a href="/" class="term-link">[ EXIT ]</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&display=swap');

  :root {
    --bg-color: #0c0c0c;
    --term-bg: #1e1e1e;
    --text-color: #33ff00;
    --prompt-color: #00bfff;
    --font-mono: 'Fira Code', monospace;
  }

  .terminal-container {
    background-color: var(--bg-color);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    font-family: var(--font-mono);
  }

  .terminal-window {
    width: 100%;
    max-width: 900px;
    background-color: var(--term-bg);
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    overflow: hidden;
    border: 1px solid #333;
  }

  .terminal-header {
    background-color: #2d2d2d;
    padding: 10px 15px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #333;
  }

  .buttons {
    display: flex;
    gap: 8px;
  }

  .btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .red { background-color: #ff5f56; }
  .yellow { background-color: #ffbd2e; }
  .green { background-color: #27c93f; }

  .title {
    margin-left: auto;
    margin-right: auto;
    color: #999;
    font-size: 0.8rem;
  }

  .terminal-body {
    padding: 20px;
    color: var(--text-color);
    font-size: 0.9rem;
    height: 600px;
    overflow-y: auto;
  }

  .ascii-art {
    font-weight: bold;
    color: var(--text-color);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .prompt {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .user {
    color: var(--prompt-color);
    font-weight: bold;
  }

  .cmd {
    color: #fff;
  }

  .response {
    margin-left: 0;
    margin-top: 5px;
    color: #ccc;
    opacity: 0.9;
  }

  .line {
    margin-bottom: 2px;
  }

  .input-line {
    display: flex;
    gap: 10px;
    margin-top: 20px;
  }

  .cursor {
    animation: blink 1s infinite;
    font-weight: bold;
    color: var(--text-color);
  }

  .footer-links {
    margin-top: 2rem;
    border-top: 1px dashed #444;
    padding-top: 1rem;
  }

  .term-link {
    color: #fff;
    text-decoration: none;
    margin-right: 1rem;
  }
  
  .term-link:hover {
    background: var(--text-color);
    color: #000;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
  
  /* Scrollbar override */
  .terminal-body::-webkit-scrollbar {
    width: 10px;
  }
  .terminal-body::-webkit-scrollbar-track {
    background: #1e1e1e;
  }
  .terminal-body::-webkit-scrollbar-thumb {
    background: #444; 
    border-radius: 5px;
  }
  .terminal-body::-webkit-scrollbar-thumb:hover {
    background: #555; 
  }
</style>
