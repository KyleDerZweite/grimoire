---
import BaseLayout from '../layouts/BaseLayout.astro';

const now = [
  "Building a distributed file system in Rust",
  "Reading 'Dune' by Frank Herbert",
  "Trying to wake up at 5AM",
  "Learning to play the synthesizer"
];

const uses = [
  "VS Code + Vim emulation",
  "NixOS",
  "Split mechanical keyboard",
  "Obsidian for notes"
];

const ideas = [
  "A social network for introverts",
  "Static site generator that runs in the browser",
  "Procedural city generator"
];

const links = [
  { name: "GitHub", url: "https://github.com/KyleDerZweite" },
  { name: "Twitter", url: "#" },
  { name: "Email", url: "mailto:hello@example.com" }
];
---

<BaseLayout title="Kyle - V6 Raw" accent="#000000">
  <div class="raw-container">
    <header class="header">
      <h1 class="title">KYLE.TXT</h1>
      <p class="subtitle">Last updated: {new Date().toLocaleDateString()}</p>
    </header>

    <hr class="divider" />

    <main class="grid">
      <section class="section">
        <h2 class="section-title">01. MANIFESTO</h2>
        <div class="content">
          <p>Simple is better than complex.</p>
          <p>I build for the user, not the browser.</p>
          <p>Code is a tool, not a religion.</p>
          <p>Perfection is the enemy of done.</p>
        </div>
      </section>

      <section class="section border-left">
        <h2 class="section-title">02. NOW</h2>
        <ul class="list">
          {now.map(item => <li>[ ] {item}</li>)}
        </ul>
      </section>

      <section class="section border-top">
        <h2 class="section-title">03. USES</h2>
        <ul class="list">
          {uses.map(item => <li>-> {item}</li>)}
        </ul>
      </section>

      <section class="section border-top border-left">
        <h2 class="section-title">04. IDEAS_GARDEN</h2>
        <ul class="list">
          {ideas.map(item => <li>* {item}</li>)}
        </ul>
      </section>
      
      <section class="section border-top span-2">
        <h2 class="section-title">05. LINKS</h2>
        <div class="links">
            {links.map(link => <a href={link.url} class="link">[{link.name}]</a>)}
        </div>
      </section>
    </main>

    <footer class="footer">
      <p>NO COPYRIGHT INTENDED. COPY LEFT.</p>
      <a href="/" class="back-link">&lt; RETURN</a>
    </footer>
  </div>
</BaseLayout>

<style>
  :root {
    --bg-color: #f0f0f0;
    --text-color: #111;
    --border-color: #111;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg-color: #111;
      --text-color: #f0f0f0;
      --border-color: #f0f0f0;
    }
  }

  .raw-container {
    background-color: var(--bg-color);
    color: var(--text-color);
    font-family: 'Times New Roman', Times, serif;
    min-height: 100vh;
    padding: 2rem;
    max-width: 1000px;
    margin: 0 auto;
    border-left: 2px solid var(--border-color);
    border-right: 2px solid var(--border-color);
  }

  .header {
    margin-bottom: 2rem;
  }

  .title {
    font-size: 4rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: -0.05em;
    margin: 0;
    line-height: 1;
  }

  .subtitle {
    font-family: 'Courier New', Courier, monospace;
    margin-top: 0.5rem;
    font-size: 0.9rem;
  }

  .divider {
    border: none;
    border-bottom: 2px solid var(--border-color);
    margin: 0;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    border-bottom: 2px solid var(--border-color);
  }

  .section {
    padding: 2rem;
  }

  .border-left {
    border-left: 2px solid var(--border-color);
  }

  .border-top {
    border-top: 2px solid var(--border-color);
  }
  
  .span-2 {
    grid-column: span 2;
  }

  .section-title {
    font-family: 'Courier New', Courier, monospace;
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .content p {
    font-size: 1.2rem;
    line-height: 1.4;
    margin-bottom: 1rem;
  }

  .list {
    list-style: none;
    padding: 0;
  }

  .list li {
    font-family: 'Courier New', Courier, monospace;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .links {
    display: flex;
    gap: 1rem;
  }

  .link {
    font-family: 'Courier New', Courier, monospace;
    font-size: 1.2rem;
    text-decoration: none;
    color: var(--text-color);
    font-weight: bold;
  }

  .link:hover {
    background-color: var(--text-color);
    color: var(--bg-color);
  }

  .footer {
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.8rem;
  }

  .back-link {
    color: var(--text-color);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
    }
    
    .border-left {
        border-left: none;
        border-top: 2px solid var(--border-color);
    }
    
    .span-2 {
        grid-column: span 1;
    }
  }
</style>
