---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    name: 'spellbook',
    desc: 'Self-hosted MTG collection manager with mobile scanning & OCR',
    lang: 'Python',
    stars: 4,
    url: 'https://github.com/KyleDerZwewordte/spellbook',
  },
  {
    name: 'p2p-cli',
    desc: 'Secure terminal P2P messenger with RSA/AES encryption',
    lang: 'Rust',
    stars: 0,
    url: 'https://github.com/KyleDerZweite/p2p-cli',
  },
  {
    name: 'hatchery',
    desc: 'Self-hosted Modpack-to-Server platform for Pterodactyl',
    lang: 'Python',
    stars: 0,
    url: 'https://github.com/KyleDerZweite/hatchery',
  },
  {
    name: 'pterodeploy',
    desc: 'AI-powered deployment assistant for Minecraft servers',
    lang: 'Python',
    stars: 1,
    url: 'https://github.com/KyleDerZweite/pterodeploy',
  },
  {
    name: 'rust-dno-crawler',
    desc: 'German DNO data gathering and processing',
    lang: 'Rust',
    stars: 0,
    url: 'https://github.com/KyleDerZweite/rust-dno-crawler',
  },
  {
    name: 'word-salat',
    desc: 'Text scrambler with AI decoding benchmarks',
    lang: 'Python',
    stars: 1,
    url: 'https://github.com/KyleDerZweite/word-salat',
  },
];

const techStack = [
  { name: 'Rust', icon: 'R' },
  { name: 'Python', icon: 'P' },
  { name: 'Go', icon: 'G' },
  { name: 'JavaScript', icon: 'JS' },
  { name: 'TypeScript', icon: 'TS' },
  { name: 'Docker', icon: 'D' },
  { name: 'Linux', icon: 'L' },
];

const langColors: Record<string, string> = {
  Python: '#3572A5',
  Rust: '#dea584',
};

const navLinks = [
  { label: 'About', href: '#about' },
  { label: 'Projects', href: '#projects' },
  { label: 'Stack', href: '#stack' },
  { label: 'Contact', href: '#contact' },
];
---

<BaseLayout title="Leander Grau — Portfolio" accent="#3b82f6">
  <!-- Floating geometric background -->
  <div class="geo-bg" aria-hidden="true">
    <svg class="geo geo--triangle geo--1" viewBox="0 0 100 100" fill="none">
      <polygon points="50,10 90,90 10,90" stroke="#3b82f6" stroke-width="1"/>
    </svg>
    <svg class="geo geo--hex geo--2" viewBox="0 0 100 100" fill="none">
      <polygon points="50,3 93,25 93,75 50,97 7,75 7,25" stroke="#3b82f6" stroke-width="1"/>
    </svg>
    <svg class="geo geo--circle geo--3" viewBox="0 0 100 100" fill="none">
      <circle cx="50" cy="50" r="45" stroke="#3b82f6" stroke-width="1"/>
    </svg>
    <svg class="geo geo--triangle geo--4" viewBox="0 0 100 100" fill="none">
      <polygon points="50,10 90,90 10,90" stroke="#3b82f6" stroke-width="0.8"/>
    </svg>
    <svg class="geo geo--hex geo--5" viewBox="0 0 100 100" fill="none">
      <polygon points="50,3 93,25 93,75 50,97 7,75 7,25" stroke="#3b82f6" stroke-width="0.8"/>
    </svg>
    <svg class="geo geo--circle geo--6" viewBox="0 0 100 100" fill="none">
      <circle cx="50" cy="50" r="45" stroke="#3b82f6" stroke-width="0.8"/>
    </svg>
    <svg class="geo geo--triangle geo--7" viewBox="0 0 100 100" fill="none">
      <polygon points="50,10 90,90 10,90" stroke="#3b82f6" stroke-width="0.6"/>
    </svg>
    <svg class="geo geo--hex geo--8" viewBox="0 0 100 100" fill="none">
      <polygon points="50,3 93,25 93,75 50,97 7,75 7,25" stroke="#3b82f6" stroke-width="0.6"/>
    </svg>
  </div>

  <!-- Navigation -->
  <nav class="nav animate-fade-down">
    <div class="nav__inner">
      <a href="/" class="nav__logo">
        <span class="nav__logo-bracket">[</span>
        <span class="nav__logo-text">LG</span>
        <span class="nav__logo-bracket">]</span>
      </a>
      <div class="nav__links">
        {navLinks.map((link) => (
          <a href={link.href} class="nav__link">{link.label}</a>
        ))}
      </div>
      <a href="https://github.com/KyleDerZweite" target="_blank" rel="noopener noreferrer" class="nav__github">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>
  </nav>

  <main class="page">

    <!-- Hero Section -->
    <section class="hero" id="hero">
      <div class="hero__content">
        <div class="hero__avatar-wrap animate-scale-in delay-1">
          <img
            src="https://avatars.githubusercontent.com/u/54944446?v=4"
            alt="Leander Grau"
            class="hero__avatar"
            width="140"
            height="140"
          />
          <div class="hero__avatar-ring"></div>
        </div>
        <div class="hero__text">
          <p class="hero__greeting animate-fade-up delay-2">Hey, I'm</p>
          <h1 class="hero__name animate-fade-up delay-3">Leander Grau</h1>
          <p class="hero__aka animate-fade-up delay-4">
            <span class="hero__aka-label">aka</span> kyle
          </p>
          <p class="hero__tagline animate-fade-up delay-5">
            CS Student at HRW &middot; Full-stack developer &middot; Open source enthusiast
          </p>
          <div class="hero__location animate-fade-up delay-6">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>NRW, Germany</span>
          </div>
        </div>
      </div>
      <div class="hero__scroll animate-fade-up delay-8">
        <div class="hero__scroll-line"></div>
      </div>
    </section>

    <!-- About Section -->
    <section class="section" id="about">
      <div class="section__container">
        <div class="section__header animate-fade-up">
          <span class="section__number">01</span>
          <h2 class="section__title">About</h2>
          <div class="section__line"></div>
        </div>
        <div class="about__content animate-fade-up delay-2">
          <p class="about__text">
            I'm a computer science student at Hochschule Ruhr West with a deep interest in building tools that solve real problems. From self-hosted platforms to encrypted messaging, I gravitate toward projects that combine technical depth with practical utility.
          </p>
          <p class="about__text">
            I work across the stack with a preference for systems-level languages like Rust alongside rapid-prototyping in Python. I believe in open source as a way to learn, contribute, and build in public.
          </p>
          <p class="about__text">
            When I'm not writing code, you'll find me exploring self-hosting infrastructure, tinkering with homelab setups, or diving into competitive card games.
          </p>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="section" id="projects">
      <div class="section__container">
        <div class="section__header animate-fade-up">
          <span class="section__number">02</span>
          <h2 class="section__title">Projects</h2>
          <div class="section__line"></div>
        </div>
        <div class="projects__grid">
          {projects.map((project, i) => (
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class={`project-card animate-fade-up delay-${i + 3}`}
            >
              <div class="project-card__top">
                <div class="project-card__icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
                  </svg>
                </div>
                {project.stars > 0 && (
                  <div class="project-card__stars">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    <span>{project.stars}</span>
                  </div>
                )}
              </div>
              <h3 class="project-card__name">{project.name}</h3>
              <p class="project-card__desc">{project.desc}</p>
              <div class="project-card__footer">
                <span class="project-card__lang">
                  <span class="project-card__lang-dot" style={`background: ${langColors[project.lang] || '#3b82f6'}`}></span>
                  {project.lang}
                </span>
                <svg class="project-card__arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="7" y1="17" x2="17" y2="7"/>
                  <polyline points="7 7 17 7 17 17"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Tech Stack Section -->
    <section class="section" id="stack">
      <div class="section__container">
        <div class="section__header animate-fade-up">
          <span class="section__number">03</span>
          <h2 class="section__title">Tech Stack</h2>
          <div class="section__line"></div>
        </div>
        <div class="stack__grid">
          {techStack.map((tech, i) => (
            <div class={`stack-item animate-scale-in delay-${i + 3}`}>
              <div class="stack-item__icon">{tech.icon}</div>
              <span class="stack-item__name">{tech.name}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section section--last" id="contact">
      <div class="section__container">
        <div class="section__header animate-fade-up">
          <span class="section__number">04</span>
          <h2 class="section__title">Get in Touch</h2>
          <div class="section__line"></div>
        </div>
        <div class="contact__content animate-fade-up delay-2">
          <p class="contact__text">
            Interested in collaborating, have a question, or just want to say hello? Feel free to reach out through any of the channels below.
          </p>
          <div class="contact__links">
            <a href="https://github.com/KyleDerZweite" target="_blank" rel="noopener noreferrer" class="contact-link animate-fade-up delay-4">
              <div class="contact-link__icon">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div class="contact-link__text">
                <span class="contact-link__label">GitHub</span>
                <span class="contact-link__value">KyleDerZweite</span>
              </div>
              <svg class="contact-link__arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"/>
                <polyline points="7 7 17 7 17 17"/>
              </svg>
            </a>
            <a href="https://kylehub.dev" target="_blank" rel="noopener noreferrer" class="contact-link animate-fade-up delay-5">
              <div class="contact-link__icon">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <line x1="2" y1="12" x2="22" y2="12"/>
                  <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                </svg>
              </div>
              <div class="contact-link__text">
                <span class="contact-link__label">Website</span>
                <span class="contact-link__value">kylehub.dev</span>
              </div>
              <svg class="contact-link__arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"/>
                <polyline points="7 7 17 7 17 17"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="footer__inner">
        <p class="footer__copy">&copy; {new Date().getFullYear()} Leander Grau. Built with precision.</p>
        <a href="#hero" class="footer__top">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="18 15 12 9 6 15"/>
          </svg>
        </a>
      </div>
    </footer>

  </main>
</BaseLayout>

<style>
  /* ── Geometric Background ── */
  .geo-bg {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .geo {
    position: absolute;
    opacity: 0.04;
  }

  .geo--1 {
    width: 180px;
    top: 8%;
    left: 5%;
    animation: geoRotate 45s linear infinite;
  }

  .geo--2 {
    width: 220px;
    top: 15%;
    right: 8%;
    animation: geoRotate 60s linear infinite reverse;
  }

  .geo--3 {
    width: 140px;
    top: 45%;
    left: 12%;
    animation: geoRotate 50s linear infinite;
  }

  .geo--4 {
    width: 160px;
    top: 55%;
    right: 4%;
    animation: geoRotate 55s linear infinite reverse;
  }

  .geo--5 {
    width: 200px;
    top: 75%;
    left: 3%;
    animation: geoRotate 65s linear infinite;
  }

  .geo--6 {
    width: 120px;
    top: 80%;
    right: 15%;
    animation: geoRotate 40s linear infinite reverse;
  }

  .geo--7 {
    width: 100px;
    top: 30%;
    left: 50%;
    animation: geoRotate 70s linear infinite;
  }

  .geo--8 {
    width: 150px;
    top: 92%;
    left: 40%;
    animation: geoRotate 48s linear infinite reverse;
  }

  @keyframes geoRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* ── Navigation ── */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 0 24px;
    background: rgba(9, 9, 11, 0.8);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--color-border);
  }

  .nav__inner {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60px;
  }

  .nav__logo {
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: 700;
    display: flex;
    gap: 2px;
    transition: opacity 0.2s ease;
  }

  .nav__logo:hover {
    opacity: 0.7;
  }

  .nav__logo-bracket {
    color: #3b82f6;
  }

  .nav__logo-text {
    color: var(--color-text);
  }

  .nav__links {
    display: flex;
    gap: 32px;
  }

  .nav__link {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: #3b82f6;
    transition: width 0.3s var(--ease-out);
  }

  .nav__link:hover {
    color: var(--color-text);
  }

  .nav__link:hover::after {
    width: 100%;
  }

  .nav__github {
    color: var(--color-text-muted);
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
  }

  .nav__github:hover {
    color: var(--color-text);
  }

  /* ── Page ── */
  .page {
    position: relative;
    z-index: 1;
  }

  /* ── Hero ── */
  .hero {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 80px 24px 40px;
    position: relative;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 32px;
  }

  .hero__avatar-wrap {
    position: relative;
    width: 140px;
    height: 140px;
  }

  .hero__avatar {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-border);
    position: relative;
    z-index: 1;
  }

  .hero__avatar-ring {
    position: absolute;
    inset: -6px;
    border-radius: 50%;
    border: 1px solid #3b82f6;
    opacity: 0.3;
    animation: ringPulse 3s ease-in-out infinite;
  }

  @keyframes ringPulse {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.04); }
  }

  .hero__text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .hero__greeting {
    font-size: 1rem;
    font-weight: 400;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
  }

  .hero__name {
    font-size: clamp(2.5rem, 7vw, 4.5rem);
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 1.05;
    background: linear-gradient(135deg, #ffffff 0%, #3b82f6 70%, #60a5fa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero__aka {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .hero__aka-label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 600;
    color: #3b82f6;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 2px 8px;
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: var(--radius-sm);
  }

  .hero__tagline {
    font-size: 1.05rem;
    font-weight: 400;
    color: var(--color-text-secondary);
    max-width: 480px;
    line-height: 1.6;
    margin-top: 8px;
  }

  .hero__location {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 8px;
  }

  .hero__scroll {
    position: absolute;
    bottom: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .hero__scroll-line {
    width: 1px;
    height: 48px;
    background: linear-gradient(to bottom, #3b82f6, transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.3; height: 48px; }
    50% { opacity: 0.8; height: 64px; }
  }

  /* ── Sections ── */
  .section {
    padding: 100px 24px;
    border-top: 1px solid var(--color-border);
  }

  .section--last {
    border-bottom: 1px solid var(--color-border);
  }

  .section__container {
    max-width: 900px;
    margin: 0 auto;
  }

  .section__header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 48px;
  }

  .section__number {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: 600;
    color: #3b82f6;
  }

  .section__title {
    font-size: 1.75rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    white-space: nowrap;
  }

  .section__line {
    flex: 1;
    height: 1px;
    background: var(--color-border);
  }

  /* ── About ── */
  .about__content {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 680px;
  }

  .about__text {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }

  .about__text:first-child {
    font-size: 1.1rem;
    color: var(--color-text);
    font-weight: 400;
  }

  /* ── Projects Grid ── */
  .projects__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .project-card {
