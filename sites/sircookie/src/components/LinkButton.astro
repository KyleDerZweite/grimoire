---
// LinkButton.astro - Link pill with brand icon

interface Props {
  href: string;
  label: string;
  icon?: string;
  brandColor?: string;
  external?: boolean;
}

const { href, label, icon, brandColor, external = true } = Astro.props;
---

<a
  href={href}
  class="link-button"
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
  style={brandColor ? `--brand-color: ${brandColor}` : ''}
>
  {icon && <span class="link-button__icon" set:html={icon} />}
  <span class="link-button__label">{label}</span>
  <svg class="link-button__arrow" width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
    <path d="M5 3L9 7L5 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</a>
