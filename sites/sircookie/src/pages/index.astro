---

<BaseLayout title={`${profile.name} - Links`} description={profile.bio}>
  <main class="page">

    <!-- Fullscreen blurred banner background -->
    <div class="bg-banner" aria-hidden="true">
      <img src={profile.banner} alt="" class="bg-banner__image" />
      <div class="bg-banner__overlay"></div>
    </div>

    <div class="card animate-fade-in delay-1">

      <!-- Banner inside card -->
      <div class="banner">
        <img src={profile.banner} alt="" class="banner__image" />
        <div class="banner__overlay" aria-hidden="true"></div>
      </div>

      <div class="card__content">

        <!-- Avatar -->
        <div class="avatar-wrapper animate-scale-in delay-3">
          <img
            src={profile.avatar}
            alt={profile.name}
            class="avatar"
            width="88"
            height="88"
          />
          <div class="avatar-ring" aria-hidden="true"></div>
          <div class="avatar-pulse" aria-hidden="true"></div>
        </div>

        <!-- Profile Info -->
        <section class="profile">
          <h1 class="profile__name animate-fade-up delay-4">{profile.name}</h1>
          <p class="profile__bio animate-fade-up delay-5">{profile.bio}</p>
        </section>

        <!-- Separator -->
        <div class="separator animate-fade-up delay-5" aria-hidden="true">
          <span class="separator__line"></span>
          <span class="separator__dot"></span>
          <span class="separator__line"></span>
        </div>

        <!-- Links -->
        <section class="links">
          {links.map((link, i) => (
            <div class={`animate-fade-up delay-${i + 6}`}>
              <LinkButton
                href={link.href}
                label={link.label}
                icon={link.icon}
                brandColor={link.brandColor}
              />
            </div>
          ))}
        </section>

        <!-- Spotify Section -->
        <section class="widgets">
          <div class="section-label animate-fade-up delay-10">
            <span class="section-label__line"></span>
            <span class="section-label__text">Now Playing</span>
            <span class="section-label__line"></span>
          </div>
          {playlists.map((pl, i) => (
            <div class={`animate-fade-up delay-${i + 11}`}>
              <SpotifyEmbed src={pl.src} label={pl.label} />
            </div>
          ))}
        </section>

        <!-- Footer -->
        <footer class="footer animate-fade-up delay-14">
          <p>&copy; {new Date().getFullYear()} {profile.name}</p>
        </footer>

      </div>
    </div>
  </main>
</BaseLayout>
