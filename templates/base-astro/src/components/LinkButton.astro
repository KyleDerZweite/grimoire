---
// LinkButton.astro - A single link pill with icon + label

interface Props {
  href: string;
  label: string;
  icon?: string;   // emoji or short text
  external?: boolean;
}

const { href, label, icon, external = true } = Astro.props;
---

<a
  href={href}
  class="link-button"
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
>
  {icon && <span class="link-button__icon">{icon}</span>}
  <span class="link-button__label">{label}</span>
  <svg class="link-button__arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
    <path d="M6 3.5L10.5 8L6 12.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</a>

<style>
  .link-button {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
    padding: 16px 22px;
    background: var(--color-surface);
    border: 1.5px solid var(--color-border);
    border-radius: var(--radius-pill);
    text-decoration: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 0.938rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    cursor: pointer;
    transition:
      transform 0.35s var(--ease-spring),
      border-color 0.3s ease,
      box-shadow 0.3s ease,
      background-color 0.3s ease;
    box-shadow: var(--shadow-soft);
    position: relative;
    overflow: hidden;
  }

  .link-button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-accent);
    border-radius: inherit;
    transform: scaleX(0);
    transform-origin: left center;
    transition: transform 0.4s var(--ease-out);
    z-index: 0;
  }

  .link-button:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lift);
  }

  .link-button:hover::before {
    transform: scaleX(1);
  }

  .link-button:hover .link-button__label,
  .link-button:hover .link-button__arrow {
    color: var(--color-surface);
  }

  .link-button:hover .link-button__icon {
    transform: scale(1.15);
  }

  .link-button:active {
    transform: translateY(0) scale(0.985);
  }

  .link-button__icon {
    font-size: 1.25rem;
    line-height: 1;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
    transition: transform 0.35s var(--ease-spring);
  }

  .link-button__label {
    flex: 1;
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }

  .link-button__arrow {
    flex-shrink: 0;
    opacity: 0.4;
    transition:
      opacity 0.3s ease,
      transform 0.35s var(--ease-spring),
      color 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .link-button:hover .link-button__arrow {
    opacity: 1;
    transform: translateX(3px);
  }
</style>
