---
// BaseLayout.astro - Link-in-bio page shell

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'My links', ogImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Fonts: Fraunces (display serif) + Outfit (geometric sans) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300..900;1,9..144,300..900&family=Outfit:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />

    <style>
      @import "../styles/global.css";
    </style>
  </head>
  <body>
    <div class="grain-overlay" aria-hidden="true"></div>
    <slot />
  </body>
</html>
